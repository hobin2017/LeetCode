class Solution(object):
    def lengthOfLongestSubstring(self, s):
        """
        :type s: str
        :rtype: int
        """
        #使用Sliding Window
        max_len = 0
        d = {}  
        pi = -1
        for i, c in enumerate(s):
            if c in d:
                pi = max((d[c], pi)) #当第一个重复字符出现后，pi变量代表窗口的index，d[c]代表该字符最后一次出现的index
            max_len = max((max_len, i - pi)) #现窗口长度与以往的最大长度进行比较
            d[c] = i #添加记录更新记录  
        return max_len
